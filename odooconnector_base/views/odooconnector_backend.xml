<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_odooconnector_backend_tree" model="ir.ui.view">
            <field name="name">odooconnector.backend.tree</field>
            <field name="model">odooconnector.backend</field>
            <field name="arch" type="xml">
                <tree string="Odoo Backends">
                    <field name="name"/>
                    <field name="version"/>
                    <field name="hostname"/>
                    <field name="port"/>
                    <field name="database"/>
                </tree>
            </field>
        </record>

        <record id="view_odooconnector_backend_form" model="ir.ui.view">
            <field name="name">odooconnector.backend.form</field>
            <field name="model">odooconnector.backend</field>
            <field name="arch" type="xml">
                <form string="Odoo Backend">
                    <header>


                        <!--<button name="import_products"-->
                                <!--type="object"-->
                                <!--string="Import Products" />-->

                        <!--<button name="import_product_uom"-->
                                <!--type="object"-->
                                <!--string="Import Product UoMs" />-->
                    </header>
                    <sheet>
                        <label for="name"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group>
                            <group>
                                <field name="version" />
                                <field name="ssl" />
                                <field name="active" />
                            </group>
                            <group>
                                <field name="hostname" />
                                <field name="port" />
                                <field name="database" />
                                <field name="username"/>
                                <field name="password" password="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Base">
                                <group>
                                    <field name="default_lang_id"/>
                                </group>

                                <group string="Import">
                                    <group>
                                        <field name="import_partner_domain_filter" />
                                        <button name="import_partners"
                                                type="object"
                                                string="Import Partners" />
                                    </group>
                                </group>
                                <group string="Export">
                                    <group>
                                        <field name="export_backend_id" />
                                        <field name="export_partner_id" />
                                        <field name="default_export_backend"/>
                                        <field name="default_export_partner"/>
                                        <field name="default_export_partner_domain"
                                               attrs="{'invisible': [('default_export_partner', '=', False)]}"/>
                                        <button name="export_partners"
                                                type="object"
                                                string="Export Partners" />
                                    </group>
                                    <group>
                                        <field name="default_export_res_users"/>
                                        <field name="default_export_res_users_domain"
                                               attrs="{'invisible': [('default_export_res_users', '=', False)]}"/>
                                        <button name="export_res_users"
                                                type="object"
                                                string="Export Users" />
                                    </group>
                                    <group>
                                        <field name="default_export_product_pricelist"/>
                                        <field name="default_export_product_pricelist_domain"
                                               attrs="{'invisible': [('default_export_product_pricelist', '=', False)]}"/>
                                        <button name="export_pricelist"
                                                type="object"
                                                string="Export Pricelist" />
                                    </group>
                                </group>
                            </page>
                            <page string="Product">
                                <group string="Export">
                                    <group>
                                        <field name="default_export_product"/>
                                        <field name="default_export_product_domain"
                                               attrs="{'invisible': [('default_export_product', '=', False)]}"/>
                                        <button name="export_products"
                                                type="object"
                                                string="Export Products" />
                                    </group>
                                    <group>
                                        <field name="default_export_product_uom"/>
                                        <field name="default_export_product_uom_domain"
                                               attrs="{'invisible': [('default_export_product_uom', '=', False)]}"/>
                                        <button name="export_product_uom"
                                                type="object"
                                                string="Export Products UOM"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_odooconnector_backend" model="ir.actions.act_window">
            <field name="name">Odoo Backends</field>
            <field name="res_model">odooconnector.backend</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_odooconnector_root" name="Odoo"
                  parent="connector.menu_connector_root" sequence="10"
                  groups="odooconnector_base.group_oc_manager"/>

        <menuitem id="menu_odooconnector_backends" name="Backends"
                  parent="menu_odooconnector_root" action="action_odooconnector_backend"
                  groups="odooconnector_base.group_oc_manager" />

    </data>
</openerp>
