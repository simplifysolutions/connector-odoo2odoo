<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_odooconnector_users_form" model="ir.ui.view">
            <field name="name">odooconnector.res.user.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[last()]" position="after">
                    <page string="Odoo Connector" groups="odooconnector_base.group_oc_manager">
                        <field name="oc_bind_ids">
                            <tree string="Bindings" editable="bottom" create="false">
                                <field name="backend_id" />
                                <field name="external_id" />
                                <field name="exported_record" readonly="1" />
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
