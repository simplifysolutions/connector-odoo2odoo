<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_odooconnector_so_backend_form" model="ir.ui.view">
            <field name="name">odooconnector.so.backend.form</field>
            <field name="model">odooconnector.backend</field>
            <field name="inherit_id" ref="odooconnector_base.view_odooconnector_backend_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Sale Order">
                        <group string="Import">
                            <group>
                                <field name="default_import_so_domain"/>
                                <field name="import_so_since"/>
                                <button name="import_so"
                                        type="object"
                                        string="Import Sale order" />
                            </group>
                            <group></group>
                        </group>
                        <group string="Export">
                            <group>
                                <field name="default_export_sales_team"/>
                                <field name="default_export_sales_team_domain"
                                       attrs="{'invisible': [('default_export_sales_team', '=', False)]}"/>
                                <button name="export_sales_team"
                                        type="object"
                                        string="Export Sales Team" />
                            </group>
                            <group>
                                <field name="default_export_sale_order"/>
                                <field name="default_export_so_domain"
                                       attrs="{'invisible': [('default_export_sale_order', '=', False)]}"/>
                                <button name="export_so"
                                        type="object"
                                        string="Export Sale order" />
                            </group>
                            <group>
                                <field name="default_export_account_tax"/>
                                <field name="default_export_account_tax_domain"
                                       attrs="{'invisible': [('default_export_account_tax', '=', False)]}"/>
                                <button name="export_taxes"
                                        type="object"
                                        string="Export Taxes" />
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</openerp>